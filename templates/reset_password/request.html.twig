{% extends 'Login/login.html.twig' %}


{% block content %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="text-secondary font-secondary drop-shadow-lg max-w-[380px] md:max-w-none md:flex-1 mx-auto bg-500 w-11/12">
        <h2 class="p-4 text-center text-lg">Réinitialiser le mot de passe</h2>
        {{ form_start(requestForm, {'attr' : { 'class' : 'p-4 grid gap-6'}}) }}
            <div class="form_container">
                {{ form_label(requestForm.email) }}
                <div class="form_inputContainer">
                    <i class="fa-solid fa-at"></i>
                    {{ form_widget(requestForm.email) }}
                </div>
            </div>
            <div>
                <small class="text-sm leading-3">
                Entrez votre adresse mail pour qu'un lien pour réinitialiser votre mot de passe puisse vous être envoyé.
                </small>
            </div>
            <button class="bg-secondary text-primary mt-4 mb-2 py-2 px-4 w-fit justify-self-center hover:bg-400 duration-150 hover:text-secondary" type="submit">Envoyer</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
