{% extends 'base.html.twig' %}

{% block title %}Profil
{% endblock %}

{% block body %}
	<main class="pt-28 flex flex-col justify-evenly form_main">
		{% if error %}
			<div class="error_container">{{ error }}</div>
		{% endif %}
		{% if success %}
			<div class="success_container">{{ success }}</div>
		{% endif %}
		<div class="profil_container">
			<section>
				<nav class="profil_menu">
					<ul>
						<li class="bg-500 text-secondary">
							<a href="{{ path('admin_profil', {'page_up':'informations', 'page_down' : page_down }) }}" class="hover:-translate-y-1 bg-transparent duration-100 rounded-t-3xl">Profil</a>
						</li>
						<li class="bg-secondary/95 text-primary">
							<a href="{{ path('admin_profil', {'page_up':'restaurant', 'page_down' : page_down}) }}" class="hover:-translate-y-1 bg-transparent duration-100 rounded-t-3xl">Restaurant</a>
						</li>
					</ul>
				</nav>
				{% block profil_up %}
					{% if page_up == 'informations' %}
					{% include 'Admin/profil_up/informations.html.twig' %}
					{% else %} 
					{% include 'Admin/profil_up/restaurant.html.twig' %}
					{% endif %}
				{% endblock %}
			</section>
			<section class="relative -top-[50px] z-20">
				<nav class="profil_menu overflow-auto h-[50px] flex items-end">
					<ul>
						<li class="bg-600 text-secondary"><a href="{{ path('admin_profil', {'page_up' : page_up, 'page_down' : 'carousel' }) }}"  class="hover:-translate-y-1 bg-transparent duration-100 rounded-t-3xl" >Carousel</a></li>
						<li><a href="">Carte</a></li>
						<li><a href="">Horaires</a></li>
						<li><a href="">Dates</a></li>
					</ul>
				</nav>
				{% block profil_down %}
						{% if page_down == 'carousel' %}
							{% include 'Admin/profil_down/carousel.html.twig' %}
						{% endif %}
                {% endblock %}
			</section>
		</div>
	</main>
{% endblock %}

{% block scripts %}
	<script src={{ asset('/js/signUp-login/'~'script.js') }}></script>
	<script src={{ asset('js/profil/'~'endleRequest.js') }}></script>
	{% if page_up == 'informations' %}
	<script src={{ asset('/js/profil/'~'endleRequest.informations.js') }}></script>
	{% else %} 
	<script src={{ asset('js/profil/'~'endleRequest.restaurant.js') }}></script>
	{% endif %}
	{% if page_down == 'carousel' %}
	<script src={{ asset('js/profil/'~'handleRequest.carousel.js') }}></script>
	{% endif %}
{% endblock %}
