                        {{ form_errors(form_card.title) }}
                    </small>
                </div>
                <div class="relative">
                    <div class="hidden">{{ form_label(form_card.description) }}</div>
                        {{ form_widget(form_card.description, { 'attr' : { 'class' : 'w-full pr-2 bg-primary/20 input_whitePlaceholder input_withoutIcon' }}) }}
