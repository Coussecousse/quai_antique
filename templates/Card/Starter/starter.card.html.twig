{# {% extends "base.html.twig" %} #}

{% extends "Card/card.html.twig" %}

{% block subTitle %} - Entrées{% endblock %}

{% block section %}
<div class="main-content">
    <section class="" id="section-starter">
        <div class="box"><img src={{ asset('/images/svg/'~'Rectangle.svg') }} alt=""></img></div>
        <div class="container-card blank">
            <div class="card_titles">
                <h2 class="">Entrées</h2>
                <img src={{ asset('/images/svg/'~ "line-sub.svg") }} alt="un point entouré de deux traits de longeur égales" class="w-[100px] -mt-2 md:w-[150px]">
            </div>
            <ul class="card-items">
                <li>
                    <div>
                        <h3>Assiette de cochonailles</h3>
                        <p class="comment" >Jabon sec de Savoie, saucisson de Savoie, coppa (IGP)</p>
                    </div>
                    <p class="price">13,00</p>
                </li>
                <li>
                    <div>
                        <h3>Demi-camembert roti sur lit de salade melée et son lard grillé</h3>
                        <p class="comment" >Camembert au lait cru</p>
                    </div>
                    <p class="price">15,50</p>
                </li>
                <li>
                    <div>
                        <h3>Escalope de foie gras poëlée au miel et compotée d'oignons doux des Cévennes (AOP)</h3>
                        <p class="comment" >Miel de Savoie</p>
                    </div>
                    <p class="price">28,00</p>
                </li>
            </ul>
            <div class="button-change group" id="back-button"><a href="{{ path('card') }}" class="group-hover:text-secondary"><i class="fa-solid fa-arrow-down"></i></a></button>
    </div>
    </section>
</div>
{% endblock %}

{% block scripts %}
    <script src={{ asset('/js/card/'~'script-options.js') }}></script>
{% endblock %}