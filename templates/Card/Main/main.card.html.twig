
{% extends "Card/card.html.twig" %}

{% block subTitle %} - Plats{% endblock %}

{% block section %}
<div class="main-content">
    <section class="" id="section-starter">
        <div class="box"><img src={{ asset('/images/svg/'~'Rectangle.svg') }} alt=""></img></div>
        <div class="container-card blank sm-cardButton:flex">
            <div class="sm-cardButton:order-last">
                <div class="card_titles">
                    <h2 class="">Plats</h2>
                    <img src={{ asset('/images/svg/'~ "line-sub.svg") }} alt="un point entouré de deux traits de longeur égales" class="w-[100px] -mt-2 md:w-[150px]">
                </div>
                <ul class="card-items">
                    <li>
                        <div>
                            <h3>L'authentique farçon savoyard maison</h3>
                            <p class="comment" >Râpé de patates servie avec charcuterie, salade mêlée et sa sauce fromage blanc</p>
                        </div>
                        <p class="price">19,90</p>
                    </li>
                    <li>
                        <div>
                            <h3>La Croziflette royale</h3>
                            <p class="comment" >Gratiné de Crozet au sarrasin de fabrication artisanal, lardons, oignons, Reblochon, servie avec Jambon sec de Savoie et salade mêlée</p>
                        </div>
                        <p class="price">28,00</p>
                    </li>
                    <li>
                        <div>
                            <h3>Marmite de crozets aux noix de saint Jacques</h3>
                            <p class="comment" >Sauce crustacées, gratinée au beaufort</p>
                        </div>
                        <p class="price">29,40</p>
                    </li>
                    <li>
                        <div>
                            <h3>Fondue traditionnelle</h3>
                            <p class="comment" >Servie avec sa salade mêlée et patates, mini 2pers, prix par pers</p>
                        </div>
                        <p class="price">29,90</p>
                    </li>
                    <li>
                        <div>
                            <h3>Fondue Royale</h3>
                            <p class="comment" >Fondue aux cèpes et Jambon sec de Savoie, mini 2pers, prix par pers</p>
                        </div>
                        <p class="price">37,90</p>
                    </li>
                </ul>
            </div>
            <div class="button-change group sm-cardButton:absolute sm-cardButton:top-1/2 sm-cardButton:-translate-y-1/2 sm-cardButton:-left-[80px] md-cardButton:-left-[135px]" id="back-button"><a href="{{ path('card') }}" class="group-hover:text-secondary"><i class="fa-solid fa-arrow-left"></i></a></button>
    </div>
    </section>
</div>
{% endblock %}

{% block scripts %}
    <script src={{ asset('/js/card/'~'script-options.js') }}></script>
{% endblock %}